{
  "name": "gdm-login-background",
  "author": "Gautier LABARRE",
  "description": "Simple app to change your gdm login background.",
  "version": "2.0.0",
  "main": "./src/electron.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "electron": "run-s build pure-electron",
    "pure-electron": "electron .",
    "electron-dev": "run-p dev pure-electron-dev",
    "pure-electron-dev": "NODE_ENV=development electron .",
    "generate-app": "run-s build build-linux",
    "generate-appimage": "run-s build build-appimage",
    "build-linux": "electron-builder --dir --linux appimage snap --config electron-builder.yml",
    "build-appimage": "electron-builder --dir --linux appimage  --config electron-builder.yml",
    "build-snap": "electron-builder --dir --linux  snap --config electron-builder.yml"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "chokidar": "^3.4.0",
    "electron": "^11.5.0",
    "electron-builder": "^22.6.0",
    "fa-svelte": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.20.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "sirv-cli": "^0.4.5",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@popperjs/core": "^2.4.0",
    "bootstrap": "^4.5.0",
    "dropzone": "^5.7.0",
    "fs-extra": "^9.0.0",
    "jquery": "^3.5.1",
    "sudo-prompt": "^9.2.1",
    "svelte-spa-router": "^2.1.0",
    "sveltestrap": "^3.3.3"
  }
}
